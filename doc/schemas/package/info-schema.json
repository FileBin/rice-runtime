{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Rice package config schema",
    "description": "Schema used to describe package",
    "type": "object",
    "required": [
        "name",
        "version"
    ],
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of package",
            "type": "string"
        },
        "version": {
            "title": "Version",
            "description": "Version of package",
            "$ref": "#/definitions/version"
        },
        "provides": {
            "title": "provides",
            "description": "Same as name, should be used if multiple packages should provide one dependency",
            "type": "string"
        },
        "type": {
            "title": "Type of package",
            "description": "Can be native or language, if it requires runner",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "properties": {
                                "runners": {
                                    "title": "Allowed runners list",
                                    "description": "Runners that can be used with this package",
                                    "$ref": "#/definitions/dependencyList"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "entrypoints": {
            "type": "array",
            "items": {
                "uniqueItems": true,
                "anyOf": [
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "dependencies": {
            "$ref": "#/definitions/dependencyList"
        }
    },
    "definitions": {
        "versionDependency": {
            "type": "string",
            "pattern": "^(>|=|<|>=|<=)?\\d+\\.\\d+\\.\\d+$"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "dependencyList": {
            "anyOf": [
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/versionDependency"
                        }
                    }
                },
                {
                    "type": "array",
                    "items": {
                        "uniqueItems": true,
                        "items": [
                            {
                                "$ref": "#/definitions/versionDependency"
                            }
                        ]
                    }
                }
            ]
        }
    }
}