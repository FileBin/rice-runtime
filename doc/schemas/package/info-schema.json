{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Rice package config schema",
    "description": "Schema used to describe package",
    "type": "object",
    "required": [
        "name",
        "version"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "version": {
            "$ref": "#/definitions/version"
        },
        "provides": {
            "type": "string"
        },
        "type": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "properties": {
                                "runners": {
                                    "$ref": "#/definitions/dependencyList"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "entrypoints": {
            "type": "array",
            "items": {
                "uniqueItems": true,
                "anyOf": [
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "dependencies": {
            "$ref": "#/definitions/dependencyList"
        }
    },
    "definitions": {
        "versionDependency": {
            "type": "string",
            "pattern": "^(>|=|<)?\\d+\\.\\d+\\.\\d+$"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "dependencyList": {
            "anyOf": [
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/versionDependency"
                        }
                    }
                },
                {
                    "type": "array",
                    "items": {
                        "uniqueItems": true,
                        "items": [
                            {
                                "$ref": "#/definitions/versionDependency"
                            }
                        ]
                    }
                }
            ]
        }
    }
}