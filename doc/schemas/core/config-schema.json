{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Rice runtime config schema",
    "description": "Schema used to configure startup parameters of runtime",
    "type": "object",
    "properties": {
        "entrypoint": {
            "type": "string"
        },
        "packageSearchPaths": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "packages": {
            "anyOf": [
                {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/package"
                        }
                    }
                },
                {
                    "type": "array",
                    "items": {
                        "uniqueItems": true,
                        "anyOf": [
                            {
                                "$ref": "#/definitions/package"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                }
            ]
        }
    },
    "required": [
        "packages"
    ],
    "definitions": {
        "package": {
            "anyOf": [
                {},
                {
                    "type": "object",
                    "minProperties": 0,
                    "properties": {
                        "loadingType": {
                            "type": "string",
                            "enum": [
                                "lazy",
                                "immediate"
                            ]
                        }
                    }
                }
            ]
        }
    }
}